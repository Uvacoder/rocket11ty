---
pagination:
  data: collections.all
  size: 20
  alias: entries
layout: layouts/home.njk
permalink: /page-list/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---
{%- for entry in entries %}
<div class="card">
<h2 class="card-title">
{% if entry.data.title %}{{ entry.data.title }}{% else %}<code>{{ entry.url }}</code>{% endif %}
</h2>
<p>
{{ entry.description }}
</p>
  <div class="text-right">
    <a href="{{ entry.url | url }}" class="btn">Read more</a>
  </div>
</div>
{% endfor %}
